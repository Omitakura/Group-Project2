<div class="ui three column grid">
  <div class="column">
    <div>
    </div>
  </div>
  <div class="column">
    <div class="ui segment">
      <form action="/posts" method="post">
        <div>
          <label id="centeredPost">Create a Post</label>
        </div>
        <div>
          <div class="ui form">
            <textarea rows="2" name="postcontent" id="postcontent"></textarea>
            <div class="inline fields">
              <label for="fruit">Select for NSFW or SFW:</label>
              <div class="field">
                <div class="ui radio checkbox checked">
                  <input type="radio" name="nsfw" checked="" tabindex="0" class="hidden" value=true>
                  <label>NSFW</label>
                </div>
              </div>
              <div class="field">
                <div class="ui radio checkbox">
                  <input type="radio" name="nsfw" tabindex="0" class="hidden" value=false>
                  <label>SFW</label>
                </div>
              </div>
            </div>
          </div>
          <input type="submit" value="Post" id="post" />
        </div>
      </form>
    </div>
  </div>
  <div class="column">
    <div></div>
  </div>
</div>

<br>
<br>
<div class="ui segment">
  <div class="ui two column very relaxed grid">
    <div class="column">
      {{#each posts}}
      {{#if this.nsfw}}
      <div class="ui raised link centered card nsfwcard">
        <a class="ui red ribbon label">NSFW</a>
        <div class="extra content">
          <div class="right floated author">
            <img class="ui avatar image" src="{{this.imgURL}}">
            {{this.postUser}}
          </div>
        </div>
        <div class="content">
          <div class="meta">
            <span class="category">{{this.postCategory}}</span>
          </div>
          <div class="description">
            <p>{{this.postContent}}, {{this.date}}</p>
          </div>
          <hr>
          <div class="ui form">
            <div class="field">
              <label>Leave a comment!</label>
              <textarea rows="2"></textarea>
            </div>
          </div>
          <div class="extra content">

            <span class="left floated" >
              <i class="like icon" value="{{this.id}}" ></i>
              Like
            </span>
            <button class="ui right floated red button">Submit</button>
          </div>
        </div>
      </div>
      {{/if}}
      {{/each}}
    </div>
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
