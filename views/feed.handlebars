{{>nav}}

<div class="ui segment">
  <div class="ui two column very relaxed grid">
    <div class="column">
      {{#each posts}}
      {{#if nsfw}}
      
      <!--may need to update the  classes/id's and handlebar refs to match what nick needs-->
      <div class="ui raised link card">
        <div class="extra content">
          <div class="right floated author">
            <img class="ui avatar image" src="{{this.imgURL}}">
            {{this.postUser}}
          </div>
        </div>
        <div class="content">
          <div class="meta">
            <span class="category">{{this.postCategory}}</span>
          </div>
          <div class="description">
            <p>{{this.postContent}}, {{this.date}}</p>
          </div>
          <div class="extra content">
            <span class="left floated like">
              <i class="like icon"></i>
              Like
            </span>
            <span class="right floated star">
              <i class="star icon"></i>
              Favorite
            </span>
          </div>
        </div>
      </div>
        {{/if}}

      {{/each}}
    </div>

    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

    <div class="column">
      {{#each posts}}
      {{#unless nsfw}}
      <!--may need to update the  classes/id's and handlebar refs to match what nick needs-->
