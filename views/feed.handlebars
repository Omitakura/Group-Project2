        <div class="extra content">
          <div class="right floated author">
            <img class="ui avatar image" src="{{this.imgURL}}">
            {{this.postUser}}
          </div>
        </div>
        <div class="content">
          <div class="meta">
            <span class="category">{{this.postCategory}}</span>
            <!-- will need to make sure that the category is able to put the appropriate post in
            the right side-->
          </div>
          <div class="description">
            <p>{{this.postContent}}</p>
          </div>
        </div>
        <div class="extra content">
          <span class="left floated like">
            <i class="like icon"></i>
            Like
          </span>
          <span class="right floated star">
            <i class="star icon"></i>
            Favorite
          </span>
        </div>
      </div>
      {{/unless}}
      {{/each}}
    </div>
  </div>
  <div class="ui vertical divider">
    and
  </div>
  
</div>