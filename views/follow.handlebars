<div id="containerStyle" class="container">
{{>nav}}
</div>
<div class="ui segment">
  <div class="ui two column very relaxed grid">
    <div class="column">
      {{#each followers}}
      <div class="ui raised link card nsfwcard" >
        <div class="extra content">
          <div class="right floated author">
            <img class="ui avatar image" src="{{this.imgURL}}">
            {{this.postUser}}
          </div>
        </div>
        <div class="content">
          <div class="meta">
            <span class="category">{{this.postCategory}}</span>
          </div>
          <div class="description">
            <p>{{this.postContent}}, {{this.date}}</p>
          </div>
          <hr>
          </div>
        </div>
      </div>
      {{/each}}
    </div>